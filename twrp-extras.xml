<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <remote name="TeamWin"
            fetch="https://github.com/TeamWin"
            review="https://gerrit.twrp.me" />
    
    <remote name="fox"
            fetch="https://gitlab.com/OrangeFox" />
    
    <remote name="notnoel"
            fetch="https://gitlab.com/NotNoelChannel" />

    <remote name="LineageOS"
            fetch="https://github.com/LineageOS"
            review="https://review.lineageos.org" />

<!-- OrangeFox lives in fox fox-9.0 repo, not OmniROM -->
    <remove-project name="android_bootable_recovery" />
    <project path="bootable/recovery" name="bootable/Recovery" remote="fox" revision="fox_9.0" />
    <project path="vendor/recovery" name="vendor/recovery" remote="fox" revision="legacy" />
    <project path="bootable/recovery/gui/theme" name="misc/Theme" remote="fox" revision="master" />

<!-- Use build repo from TeamWin -->
    <remove-project name="android_build" />
    <project path="build" name="make" remote="notnoel" revision="fox_7.1" >
    <copyfile src="core/root.mk" dest="Makefile" />
    </project>

<!-- Include Magisk repo for resetprop support -->
    <project path="external/magisk-prebuilt" name="external_magisk-prebuilt" remote="TeamWin" revision="android-7.1" />

    <project path="external/python3" name="android_external_python3" remote="TeamWin" revision="android-9.0"/>

<!-- Include forked external unzip repo from CyanogenMod for toolbox/toybox support -->
    <project path="external/unzip" name="android_external_unzip" remote="TeamWin" revision="cm-14.1" />

<!-- Include external zip repo for zip support -->
    <project path="external/zip" name="android_external_zip" remote="TeamWin" revision="android-7.1" />

<!-- Include external LineageOS repos for bash & nano -->
    <project name="android_external_bash" path="external/bash" remote="LineageOS" revision="cm-14.1" />
    <project name="android_external_nano" path="external/nano" remote="LineageOS" revision="cm-14.1" />
    <project name="android_external_libncurses" path="external/libncurses" remote="LineageOS" revision="cm-14.1" />
</manifest>
